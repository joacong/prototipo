<%= form_for @company_area, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :company_area_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select :company_area_id, options_for_select(CompanyArea.all.map{|c| [c.name, c.id]}<<['Seleccione', 0], 0), :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  company_areas_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
